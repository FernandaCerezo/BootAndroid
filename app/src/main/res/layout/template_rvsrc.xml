<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/design_tech"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="2dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFECEC"
            android:divider="@android:color/transparent">

            <View
                android:id="@+id/tech_photo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/logo_arkus" />

            <TextView
                android:id="@+id/tech_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_19sdp"
                android:layout_toEndOf="@id/tech_photo"
                android:layout_toRightOf="@id/tech_photo"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#A1A8FD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tech_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tech_name"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_toEndOf="@id/tech_photo"
                android:layout_toRightOf="@id/tech_photo"
                android:text="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>