<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/design_tech"
    android:layout_margin="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="2dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFECEC"
            android:divider="@android:color/transparent"
            android:gravity="center">

            <View
                android:id="@+id/tech_photo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:background="@drawable/logo_arkus" />

            <TextView
                android:id="@+id/tech_name"
                android:layout_width="79dp"
                android:layout_height="22dp"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="@dimen/_19sdp"
                android:layout_marginBottom="@dimen/_19sdp"
                android:layout_toEndOf="@id/tech_photo"
                android:layout_toRightOf="@id/tech_photo"
                android:text="Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#A1A8FD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tech_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tech_name"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_toEndOf="@id/tech_photo"
                android:layout_toRightOf="@id/tech_photo"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/_textdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tech_number4"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tech_name"
                android:layout_marginStart="@android:dimen/notification_large_icon_height"
                android:layout_marginLeft="148dp"
                android:layout_toEndOf="@+id/tech_number"
                android:layout_toRightOf="@id/tech_photo"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/_textdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tech_number4"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="Disponibles" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tech_number"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/tech_photo"
                android:text="Totales" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>