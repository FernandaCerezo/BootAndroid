<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_19sdp"
            >

            <TextView
                android:layout_below="@+id/layout2"
                android:id="@+id/textinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:shadowRadius="@integer/google_play_services_version"
                android:textAlignment="center"
                android:text="@string/User_info"
                android:textColor="#000011"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Textname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:text="Nombre"
                    android:textAlignment="center"
                    android:textColor="@color/Base"
                    android:textSize="35sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@+id/textinfo"
                android:background="@drawable/itemprofile">


                <TextView
                    android:id="@+id/txtRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtEspecTech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/accountinfo"
                android:layout_below="@+id/info"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/account"
                android:textColor="#000011"
                android:shadowRadius="@integer/google_play_services_version"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/accountinfo"
                android:layout_margin="5sp"
                android:background="@drawable/itemprofile"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginRight="@dimen/_19sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="TextView"
                    android:textColor="#000011"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>