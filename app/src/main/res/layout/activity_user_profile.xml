<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/user"></ImageView>

            <TextView
                android:id="@+id/t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:bufferType="normal"
                android:fontFamily="sans-serif-black"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@color/Base"
                android:textSize="24sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="-2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InformaciÃ³n"
                android:textColor="#000011"
                android:textSize="23sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtTech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtEspecTech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitleAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textColor="#000011"
                android:textSize="23sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#000011"
                android:textSize="15sp"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>